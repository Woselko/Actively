<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="nav-link text-light" asp-controller="Account" asp-action="MyAccount">Witaj @User.Claims.FirstOrDefault().Value.ToString()!</span>
        </li>
        <li class="nav-item" style="margin-right:10px">
            <a href="@Url.Action("UserAccount", "UserView", new { id = @User.Claims.LastOrDefault().Value})" >
                <input type="submit" value="MOJE KONTO" class="btn btn-dark" />
            </a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Logout"><input type="submit" value="WYLOGUJ" class="btn btn-dark" /></a>
        </li>
