    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="RegisterUser">@Resources.Common.Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">@Resources.Common.Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="language" asp-action="change" asp-route-culture="en">Eng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="language" asp-action="change" asp-route-culture="pl">Pl</a>
        </li>
    }
